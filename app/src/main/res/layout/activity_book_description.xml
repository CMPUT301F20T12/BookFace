<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".BookDescription">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <Button
            android:id="@+id/myBooksOrSearchButton"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_prim"
            android:text="My Books" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="413dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="361dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionHeadingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/authorNameText"
            android:layout_alignLeft="@+id/authorNameText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:text="TITLE"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/authorNameText"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:text="Author Name"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <!--        95dp, 125-->

        <TextView
            android:id="@+id/isbnText"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/authorNameText"
            android:layout_alignLeft="@+id/authorNameText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="108dp"
            android:text="ISBN"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/authorNameText"
            android:layout_alignLeft="@+id/authorNameText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="108dp"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="italic"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/descriptionHeadingText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Description:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButton"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539"
        />

    <TextView
        android:id="@+id/bookDescriptionText"
        android:layout_width="367dp"
        android:layout_height="138dp"
        android:layout_marginTop="321dp"
        android:layout_marginRight="392dp"
        android:layout_marginBottom="53dp"
        android:text="Book Description"
        app:layout_constraintBottom_toTopOf="@+id/collectOrSendRequestButton"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/descriptionHeadingText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764"
        android:textSize="20sp"
        android:textStyle="italic"
        ></TextView>


    <TextView
        android:id="@+id/borrowerNameText"
        android:layout_width="282dp"
        android:layout_height="24dp"
        android:text="Borrower"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/descriptionHeadingText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/descriptionHeadingText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <Button
        android:id="@+id/collectOrSendRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="77dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descriptionHeadingText" />


</androidx.constraintlayout.widget.ConstraintLayout>
